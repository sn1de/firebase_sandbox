<h1>All Counters</h1>
<button id="hn">Not Here Now</button>
<ul id='counters'>
</ul>
<script type="text/javascript">
$(document).ready(function () {
	data.on('child_added', function(snapshot, prev) {
		var counter = snapshot.val();
		console.log("child_added - " + counter.counter + ":" + counter.count);
		console.log("name - " + snapshot.name());
		console.log(counter);
		displayCounter(counter.counter, counter.count, snapshot.name());
	});
	function displayCounter(name, count, key) {
		console.log('appending li');

		$('<button/>', {
			text: "Add",
			click: function() {
				console.log("adding to " + key);
				data.child(key + '/count').transaction(fxn.increment_count);
			}

		}).appendTo($('<li/>', {
			id: key,
			text: name + ':' + count
		}).appendTo($("#counters")));

		$('<button/>', {
			text: "Subtract",
			click: function() {
				console.log("adding to " + key);
				data.child(key + '/count').transaction(fxn.decrement_count);
			}
		}).appendTo($('#' + key));
	};

	data.on('child_changed', function (snapshot) {
		console.log("changed - " + snapshot.name());
		var counter = snapshot.val();
		$('#' + snapshot.name()).replaceWith(
			$('<li/>', {
				id: snapshot.name(),
				text: counter.counter + ':' + counter.count
			})
		);
		$('#' + snapshot.name()).append(
			$('<button/>', {
				text: "Add",
				click: function() {
					console.log("replacing " + snapshot.name());
					data.child(snapshot.name() + '/count').transaction(fxn.increment_count);
				}
			}
			)
		);
		$('#' + snapshot.name()).append(
				$('<button/>', {
					text: "Subtract",
					click: function() {
						console.log("subtracting");
						data.child(snapshot.name() + '/count').transaction(fxn.decrement_count);
					}
				})
			);
	});
});
</script>
<script type="text/javascript">
	$('#hn').click(function () {
		$(this).text(here_now());
	});
</script>
